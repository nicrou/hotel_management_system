<div class="unlock-instructions">
  <div class="fields">
    <%= link_to hotel_index_path do %>
      <span class="btn btn-default btn-home" title="Hotel Page"><i class="fa fa-home"></i></span>
    <% end %>

    <hr />
    <h4>Unlock Instructions</h4>
    <hr />

    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="input-group field">
      <span class="input-group-addon" title="Email"><i class="fa fa-envelope"></i></span>
      <!-- <%= f.label :email %><br /> -->
      <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
    </div>
  </div>

  <div class="footer">
    <div class="actions">
      <%= button_tag type: 'submit', class: "btn btn-primary" do %>
        <i class="fa fa-unlock" aria-hidden="true"> Resend unlock instructions</i>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
 <% end %>
