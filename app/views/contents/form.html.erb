<div class="row new-content">
  <div class="steps">
    <div class="progress-container">
      <ul class="progress-indicator">
        <li class="completed"> <span class="bubble">1</span> Step 1. </li>
          <li> <span class="bubble">2</span> Step 2. </li>
          <li> <span class="bubble">3</span> Step 3. </li>
          <li> <span class="bubble">4</span> Step 4. </li>
      </ul>
    </div>

    <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@content.errors.count, "error") %> prohibited
        this content from being saved:
      </h2>
      <ul>
        <% @content.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(@content) do |f| %>
  <!-- fieldsets -->
  	<fieldset>
      <%= render partial: "step_1", locals: { f: f, content: @content } %>
      <%= link_to contents_path, class: "btn btn-default" do %><i class="fa fa-arrow-left"></i> Previous<% end %>
      <button class="btn btn-primary next" value="Next" type="button">Next <i class="fa fa-arrow-right"></i></button>
    </fieldset>
    <fieldset>
      <%= render partial: "step_2", locals: { f: f, content: @content } %>
      <button class="btn btn-default previous" value="Previous" type="button"><i class="fa fa-arrow-left"></i> Previous</button>
      <button class="btn btn-primary next" value="Next" type="button">Next <i class="fa fa-arrow-right"></i></button>
    </fieldset>
    <fieldset>
      <%= render partial: "step_3", locals: { f: f, content: @content } %>
      <button class="btn btn-default previous" value="Previous" type="button"><i class="fa fa-arrow-left"></i> Previous</button>
      <button class="btn btn-primary next" value="Next" type="button">Next <i class="fa fa-arrow-right"></i></button>
    </fieldset>
    <fieldset>
      <%= render partial: "step_4", locals: {f: f, content: @content} %>
      <button class="btn btn-default previous" value="Previous" type="button"><i class="fa fa-arrow-left"></i> Previous</button>
      <button class="btn btn-primary done" value="Done" type="submit">Done <i class="fa fa-check"></i></button>
    </fieldset>

  </div>
  <% end %>
</div>

<%= javascript_tag do %>
 initCheckbox($(".js-checkboxpicker"));
 steps.initControls();
 contents.initControls();
<% end %>
