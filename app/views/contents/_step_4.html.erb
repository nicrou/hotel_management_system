<div class="fields step-4">
    <h2 class="fs-title">Modules</h2>
    <h1 class="fs-subtitle">Choose whether a map, a slider or any other components will be displayed with this content.</h1>
  <div class="fields">
    <div class="field">
      <%= f.label :components, class: "required" %>
        <% components = Component.select(:id, :title) %>
        <% selected = @content.components.pluck(:id) %>
        <%= select_tag :components, options_from_collection_for_select(components, 'id', 'title', selected), { class: "selectpicker show-tick", multiple: true, autocomplete: "off", 'data-width' => "100%", 'data-header' => "Select Modules", 'data-live-search' => "true" } %>
    </div>
  </div>
</div>

<hr>

<div class="wrap-panel-alert">
  <div class="alert alert-info alert-dismissable">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    Info! To create new components use the <i class="fa fa-cog"> +</i> button in the <%= link_to files_index_path, class: "alert alert-info" do %><span>Components</span><% end %> panel.
  </div>
</div>
