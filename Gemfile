# Provides TinyColor JavaScript library for your Rails application. It's a fast, small color manipulation and conversion tool.
gem 'tiny-color-rails', '~> 0.0.2'
# Provides Pick-a-Color JavaScript library for your Rails application. It's a jQuery color picker for Twitter Bootstrap 3
gem 'pick-a-color-rails', '~> 0.0.1'
# Moment.js is a lightweight javascript date library for parsing, manipulating, and formatting dates. This gem allows for its easy inclusion into the rails asset pipeline.
gem 'momentjs-rails', '~> 2.15', '>= 2.15.1'
