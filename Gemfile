gem 'font-awesome-rails', '~> 4.7'
# Adds Dropzone, a great JS File upload by Matias Meno, to the Rails Asset pipeline.
gem 'dropzonejs-rails', '~> 0.7.3'
# A beautiful WYSIWYG editor with image uploads for Rails.
gem 'bootstrap-wysihtml5-rails'
# A gem for adding the tokenizing plugin, Bootstrap Tokenfield to the rails asset pipeline.
